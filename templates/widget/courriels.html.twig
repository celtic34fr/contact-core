{% set background_message = background_message ??'#C8E8C2' %}
{% set background_title = background_title ?? 'rgba(0, 0, 0, 0.06)' %}
{% set color_title = color_title ?? 'black' %}
{% set mailErrors = mailError() %}

<style>
    .card-title {
        background: {{ background_title }};
        color: {{ color_title }};
    }
    .card-message {
        background: {{ background_message }}
    }
</style>
{#% set mailErrors = 0 %#}
<div class="card-header card-title">
    <i class="far fa-file-alt"></i> &nbsp;Courriels en souffrance
</div>
<div class="card-body card-message">
    <p class="col-12 mx-0 px-0 text-center">
        {% if mailErrors > 0 %}
            <a href="{{ 'path()' }}">Des courriels sont à renvoyer ({{ mailErrors }})</a>
        {% else %}
            Aucune erreur détectée
        {% endif %}
    </p>
</div>